<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @repos %>
<ul>
  <% @repos.each do |r| %>
    <li>
      Name: <%= r["name"] %><br>
      <a href=<%= r["html_url"] %>><%= r["html_url"] %></a><br>
      <p>Description: <%= r["description"] %></p>
    </li>
  <% end %>
</ul>
<% end %>